<!-- Fluent-like ResourceDictionary for ENGD (corner radii, accent brushes, mica simulation) -->
<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Corner radii -->
  <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>
  <CornerRadius x:Key="OverlayCornerRadius">8</CornerRadius>
  <CornerRadius x:Key="WindowCornerRadius">8</CornerRadius>

  <!-- Accent/color resources (fallback) -->
  <SolidColorBrush x:Key="AccentColorBrush">#107C10</SolidColorBrush>
  <SolidColorBrush x:Key="AccentForegroundBrush">White</SolidColorBrush>

  <SolidColorBrush x:Key="AppBackgroundLight">#F3F4F6</SolidColorBrush>
  <SolidColorBrush x:Key="AppBackgroundDark">#111214</SolidColorBrush>

  <!-- Mica-like surface: semi-transparent gradient -->
  <LinearGradientBrush x:Key="MicaBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Offset="0.0" Color="#CCFFFFFF" />
    <GradientStop Offset="1.0" Color="#99F3F4F6" />
  </LinearGradientBrush>

  <!-- Card style -->
  <Style x:Key="CardStyle" TargetType="Border">
    <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
    <Setter Property="Padding" Value="12" />
    <Setter Property="Margin" Value="8" />
    <Setter Property="Background" Value="{DynamicResource AppBackgroundLight}" />
  </Style>

</ResourceDictionary>
